.widewrapper.main
  .container
    .row
      .col-md-8.blog-main(ng-controller="IndexController")
        .row
          .col-md-6.col-sm-6(ng-repeat='question in questions track by $index')
            article.blog-teaser
              header
                h3
                  a(href='/questions/{{question._id}}') {{question.Title}}
                span.meta {{question.CreateDate | date : format : fullDate}}
                hr
              .body
                 {{question.Content}}
              .clearfix
                a.btn.btn-tales-one(href='http://www.otisleymcintyre.com/blogs/test') Đọc thêm
        include ../layout/paging
      include ../layout/side_content
