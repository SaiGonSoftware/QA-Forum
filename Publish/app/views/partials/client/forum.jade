.widewrapper.main
    .container
        .row
            .col-md-8.blog-main(ng-controller='ForumController')
                .forum-cat.bs-callout.bs-callout-info(ng-init="categories = categories;postCount=postCount",ng-repeat='data in categories track by $index')
                    a(href='/chuyen-muc/{{data._id}}',class='cat-name-content')
                        h3 {{data.Name}}
                        h4 {{postCount[$index]}} Bài Viết
            include ../../layout/client/side_content
